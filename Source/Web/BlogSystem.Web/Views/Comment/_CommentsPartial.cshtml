@model int

<a href="@Url.Action("All", "Comment", new { id = Model })" class="btn btn-primary" id="show-comments-btn"
   data-ajax="true"
   data-ajax-failure="showJsonError"
   data-ajax-success="commentsLoaded"
   data-ajax-method="GET"
   data-ajax-mode="replace"
   data-ajax-update="#comments"
   data-ajax-loading="#comments-load"><span id="comments-load" class="fa fa-spinner fa-pulse loader"></span>View Comments</a>

<section id="comments" class="comments"></section>