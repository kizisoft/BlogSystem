@model BlogSystem.Web.ViewModels.Sidebar.SidebarViewModel

<aside class="content-root">
    <section class="content">
        <header class="aside-header">
            <div class="title aside-title">
                <h2>Social medias</h2>
            </div>
        </header>

        <div class="aside-body">
            <ul class="social">
                <li class="mailto"><a href="@ViewBag.Settings.Get["Contact Email"]" target="_blank"><i class="fa fa-envelope-square fa-3x"></i></a></li>
                <li class="facebook"><a href="@ViewBag.Settings.Get["Facebook Profile"]" target="_blank"><i class="fa fa-facebook-square fa-3x"></i></a></li>
                <li class="linkedin"><a href="@ViewBag.Settings.Get["Linked In Profile"]" target="_blank"><i class="fa fa-linkedin-square fa-3x"></i></a></li>
                <li class="github"><a href="@ViewBag.Settings.Get["GitHub Profile"]" target="_blank"><i class="fa fa-github-square fa-3x"></i></a></li>
                <li class="skype"><a href="@ViewBag.Settings.Get["Contact Email"]" target="_blank"><i class="fa fa-skype fa-3x"></i></a></li>
                <li class="google-plus"><a href="@ViewBag.Settings.Get["Google Profile"]" target="_blank"><i class="fa fa-google-plus-square fa-3x"></i></a></li>
                <li class="rss"><a href="@ViewBag.Settings.Get["RSS Url"]" target="_blank"><i class="fa fa-rss-square fa-3x"></i></a></li>
                <li class="stackoverflow"><a href="@ViewBag.Settings.Get["Stack Overflow Profile"]" target="_blank"><i class="fa fa-stack-overflow fa-3x"></i></a></li>
            </ul>
        </div>
    </section>

    <section class="content">
        <header class="aside-header">
            <div class="title aside-title">
                <h2>Me @@GitHub</h2>
            </div>
        </header>

        <div class="aside-body">
            <iframe src="https://githubbadge.appspot.com/kizisoft?s=1" style="margin: 5px 0 -15px 0;border: 0;height: 142px;width: 200px;overflow: hidden;" frameborder="0"></iframe>
        </div>
    </section>

    <section class="content">
        <header class="aside-header">
            <div class="title aside-title">
                <h2>Recent Posts</h2>
            </div>
        </header>

        <div class="aside-body">
            @if (Model != null && Model.BlogPosts != null)
            {
                <ul>
                    @foreach (var blogPost in Model.BlogPosts)
                    {
                        <li><a href="#">@blogPost.Title</a></li>
                    }
                </ul>
            }
            else
            {
                <h3>Sorry, nothing here.</h3>
            }
        </div>
    </section>
</aside>