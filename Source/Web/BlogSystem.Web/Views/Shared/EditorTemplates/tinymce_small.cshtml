<script src="@Url.Content("~/Scripts/tinymce/tinymce.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea.tinymce-small",
        theme: "modern",
        plugins: [
            "advlist autolink lists link image preview hr anchor pagebreak",
            "searchreplace wordcount visualblocks visualchars code fullscreen",
            "insertdatetime media nonbreaking save table contextmenu directionality",
            "emoticons paste textcolor colorpicker textpattern"
        ],
        toolbar1: "forecolor backcolor emoticons | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
        image_advtab: true
    });
</script>

<textarea name="@ViewData.TemplateInfo.HtmlFieldPrefix" class="tinymce-small" rows="5">
    @ViewData.TemplateInfo.FormattedModelValue
</textarea>