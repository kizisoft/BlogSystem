@model string
<!-- Modal -->
<div class="modal fade" id="user-popup" tabindex="-1" role="dialog" aria-labelledby="user-popup-label" aria-hidden="true">
    <div class="modal-dialog">
        @using (Html.BeginForm("Upload", "Users", null, FormMethod.Post, new { id = "uploader", @class = "modal-content form-horizontal clearfix", enctype = "multipart/form-data" }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="user-popup-label">Add Image</h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.Hidden("id", Model)

                <div class="form-group">
                    <div class="col-md-4">
                        <div class="radio">
                            <label>
                                <input type="radio" name="source" checked="checked" value="file" />
                                From my computer
                            </label>
                        </div>
                    </div>
                    <div id="file" class="pic-source col-md-8">
                        <input class="form-control" type="file" name="file" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <div class="radio">
                            <label>
                                <input type="radio" name="source" value="url" />
                                From the web
                            </label>
                        </div>
                    </div>
                    <div id="url" class="pic-source col-md-8 hidden">
                        <input class="form-control" type="text" name="url" placeholder="http://example.com/image.png" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <div class="radio">
                            <label>
                                <input id="none" type="radio" name="source" value="none" />
                                Empty user icon
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <span id="user-error" class="text-danger pull-left"></span>
                <button type="submit" id="submit-btn" class="btn btn-success pull-right"><span id="user-pic-loader" class="fa fa-spinner fa-pulse loader"></span>Add picture</button>
            </div>
        }
    </div>
</div>