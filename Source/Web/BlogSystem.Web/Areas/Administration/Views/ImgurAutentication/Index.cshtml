@model BlogSystem.Common.FileUploadServices.ImgurFileUpload.ITokenDataModel
@{
    ViewBag.Title = "Generate Imgur Token";
}

<h2>@ViewBag.Title</h2>
<hr />
<br />

@if (Model == null)
{
    <h3 class="text-danger">Token does not exist!</h3>
    <br />
    @Html.ActionLink("Generate token", "Generate", null, new { @class = "btn btn-success" })
}
else
{
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.AccessToken)</dt>
        <dd>@Html.DisplayFor(model => model.AccessToken)</dd>

        <dt>@Html.DisplayNameFor(model => model.RefreshToken)</dt>
        <dd>@Html.DisplayFor(model => model.RefreshToken)</dd>

        <dt>@Html.DisplayNameFor(model => model.ExpiresIn)</dt>
        <dd>@Html.DisplayFor(model => model.ExpiresIn)</dd>

        <dt>@Html.DisplayNameFor(model => model.TokenType)</dt>
        <dd>@Html.DisplayFor(model => model.TokenType)</dd>

        <dt>@Html.DisplayNameFor(model => model.AccountId)</dt>
        <dd>@Html.DisplayFor(model => model.AccountId)</dd>

        <dt>@Html.DisplayNameFor(model => model.AccountUsername)</dt>
        <dd>@Html.DisplayFor(model => model.AccountUsername)</dd>

        <dt>@Html.DisplayNameFor(model => model.Scope)</dt>
        <dd>@Html.DisplayFor(model => model.Scope)</dd>

        <dt>@Html.DisplayNameFor(model => model.CreatedOn)</dt>
        <dd>@Html.DisplayFor(model => model.CreatedOn)</dd>
    </dl>
    <br />

    @Html.ActionLink("Regenerate token", "Generate", new { Regenerate = true }, new { @class = "btn btn-warning" })
}