@model BlogSystem.Web.Areas.Administration.ViewModels.Comments.CommentInputModel
@{
    ViewBag.Title = "Edit Comment";
}

<h2>@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm("Edit", "Comments", null, FormMethod.Post, new { @class = "form-horizontal clearfix" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
    @Html.HiddenFor(model => model.Id);
    @Html.HiddenFor(model => model.BlogPostId);

    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Content, new { @class = "form-control", id = "input-comment" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsVisible, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IsVisible, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IsVisible, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ReasonToHide, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ReasonToHide, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ReasonToHide, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-4">
            @Html.ActionLink("Back to List", "Index", new { id = Model.BlogPostId }, new { @class = "btn btn-default pull-left" })
            <button type="submit" class="btn btn-success pull-right">Save Changes</button>
        </div>
    </div>
}