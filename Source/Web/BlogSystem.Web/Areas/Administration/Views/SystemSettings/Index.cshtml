@model IEnumerable<BlogSystem.Data.Models.SystemSetting>
@{
    ViewBag.Title = "System Settings";
}

<h2>@ViewBag.Title</h2>
<hr />
<br />

<div class="table-responsive text-center">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="info">
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Value)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Value)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { name = item.Name }, new { @class = "btn btn-xs btn-success" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>